<% layout('layouts/boilerplate') %>
<link rel="stylesheet" href="/stylesheets/stars.css">
<div class="container-serach search-bar-partial">
    <img class="" src="../photos/logo.png" alt="" height="120px">
    <form class="index-search" action="/tenniscourts/search" method="GET">
        <div class="input-group mb-3">
            <select class="form-select" id="search" name="find_by">
                <option value="name" selected>Search By...</option>
                <option value="name">Court name</option>
                <option value="city">City</option>
                <option value="zipcode">Zip Code</option>
            </select>
            <input type="text" class="form-control" placeholder="Find Courts Near" id="search" name="location">
            <button class="btn btn-success">Search</button>
        </div>
    </form>
</div>

<div class="show-background"></div>
<div class="row">
    <div class="col-4">
        <div class="floating-card user-container">
            <img class="mb-3 user-image" src="../../photos/photo.png" alt="photo">
            <div class="row">
                <div class="col-12">
                    <div class="list-group" id="list-tab" role="tablist">
                        <a class="list-group-item list-group-item-action active" id="list-home-list" data-bs-toggle="list" href="#list-home" role="tab" aria-controls="home">Bookings</a>
                        <a class="list-group-item list-group-item-action" id="list-profile-list" data-bs-toggle="list" href="#list-profile" role="tab" aria-controls="profile">Reviews</a>
                        <a class="list-group-item list-group-item-action" id="list-messages-list" data-bs-toggle="list" href="#list-messages" role="tab" aria-controls="messages">Bookmarks</a>
                        <a class="list-group-item list-group-item-action" id="list-settings-list" data-bs-toggle="list" href="#list-settings" role="tab" aria-controls="settings">Friends</a>
                </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-8">
        <div class="container-userinfo">
            <p><%= user.username %></p>
        </div>
        <div class="tab-content booking-content" id="nav-tabContent">
            <div class="tab-pane fade show active" id="list-booking" role="tabpanel" aria-labelledby="list-home-list">
                <% for (let booking of user.bookings) { %>
                    <% if (booking.day > new Date().getDate() || booking.day === new Date().getDate() && booking.time > new Date().getHours()) { %>
                        <div class="card mb-3">
                            <div class="row booking-container">
        
                                <div class="card-body booking-content">
                                    <div>
                                        <img class="booking-image" src="<%= booking.ground.image %>" alt="">
                                    </div>
                                    <div boooking-text>
                                        <div class="booking-date">
                                            <p class="card-text">April <%= booking.day %>, 2021</p>
                                        </div>
                                        <div>
                                            <h5 id="ground" class="card-title"><%= booking.ground.name %></h5>
                                            <p id="court" class="card-text"><%= booking.unitCourt %></p>
                                            <p id="time" class="card-text text-muted">From 
                                                <strong>
                                                    <% if (booking.time > 12) { %>
                                                        <%= booking.time - 12 %>:00 pm
                                                    <% } else if (booking.time === 12) { %>
                                                        <%= booking.time %>:00 pm
                                                    <% } %>
                                                </strong> to 
                                                <strong>
                                                    <% if (booking.time + 1 > 12) { %>
                                                        <%= booking.time + 1 - 12 %>:00 pm
                                                    <% } else if (booking.time + 1 === 12) { %>
                                                        <%= booking.time + 1%>:00 pm
                                                    <% } %>
                                                </strong>
                                            </p>
                                        </div>
                                        <div class="button-container">
                                            <a class="btn booking-button" href="">Get Direction</a>
                                            <form class="d-inline" action="/tenniscourts/<%= booking.ground._id %>/booking/<%= booking._id %>?_method=DELETE" method="POST">
                                                <button class="btn booking-button">Cancel</button>
                                            </form>
                                        </div>
                                        
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% } %>
                <% } %>
            </div>
            <div class="tab-pane fade" id="list-reviews" role="tabpanel" aria-labelledby="list-profile-list">2</div>
            <div class="tab-pane fade" id="list-bookmarks" role="tabpanel" aria-labelledby="list-messages-list">3</div>
            <div class="tab-pane fade" id="list-friends" role="tabpanel" aria-labelledby="list-settings-list">4</div>
        </div>
        </div>
</div>



